[DEFAULT]
#banaction = iptables-multiport
#action = %(action_)s
backend = systemd

[sshd]
enabled = true
backend = systemd
mode = aggressive
port = ssh
maxretry = 5
findtime = 600
bantime = 3600          # 初次封 1 小时
bantime.increment = true
bantime.factor = 24     # 每次复犯乘以 24，大约 1h -> 1d -> 24d ...
bantime.maxtime = 5w    # 封禁上限 5 周
